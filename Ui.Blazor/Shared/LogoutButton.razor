@inject ITokenStore TokenStore
@inject AuthenticationStateProvider AuthProvider
@inject UiText T

<button @onclick="LogoutAsync" style="font-size:20px; height:48px; border-radius:12px;">
  @T["Nav.Logout"]
</button>

@code {

  private async Task LogoutAsync()
  {
    await TokenStore.ClearAsync();
    if (AuthProvider is JwtAuthStateProvider jwt)
      jwt.NotifyUserLogout();

    Nav.NavigateTo("/login", false);
  }

}
